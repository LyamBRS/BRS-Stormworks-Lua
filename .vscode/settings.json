{
    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": true,
    "todohighlight.keywords": [
        // "DEBUG:",
        // "REVIEW:",
        {
            "text": "[BRS]",
            "color": "#8000FF",
        },
        {
            "text": "screen",
            "color": "#6060dd",
        },
        {
            "text": "input",
            "color": "#6060dd",
        },
        {
            "text": "map",
            "color": "#6060dd",
        },
        {
            "text": "output",
            "color": "#6060dd",
        },
        {
            "text": "property",
            "color": "#6060dd",
        },
        {
            "text": "tonumber",
            "color": "#9090ff",
        },
        {
            "text": "string",
            "color": "#9090ff",
        },
        {
            "text": ".format",
            "color": "#66ddaa",
        },
        {
            "text": ".pack",
            "color": "#66ddaa",
        },
        {
            "text": ".gsub",
            "color": "#66ddaa",
        },
        {
            "text": ".char",
            "color": "#66ddaa",
        },
        {
            "text": ".sub",
            "color": "#66ddaa",
        },
        {
            "text": ".unpack",
            "color": "#66ddaa",
        },
        {
            "text": ".find",
            "color": "#66ddaa",
        },
        {
            "text": ".getText",
            "color": "#66ddaa",
        },
        {
            "text": "math",
            "color": "#9090ff",
        },
        {
            "text": ".getBool",
            "color": "#dd6060",
        },
        {
            "text": ".setBool",
            "color": "#dd6060",
        },
        {
            "text": ".getNumber",
            "color": "#60dd60",
        },
        {
            "text": ".setNumber",
            "color": "#60dd60",
        },
    ],
    //"todohighlight.keywordsPattern": "TODO:|FIXME:|\\(([^)]+)\\)", //highlight `TODO:`,`FIXME:` or content between parentheses
    "todohighlight.defaultStyle": {
        "backgroundColor": "transparent",
        "overviewRulerColor": "grey",
        "border": "none",
        "isWholeLine": false,
        //other styling properties goes here ... 
    },
    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.php",
        "**/*.css",
        "**/*.lua",
        "**/*.scss"
    ],
    "todohighlight.exclude": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/dist/**",
        "**/build/**",
        "**/.vscode/**",
        "**/.github/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/.next/**",
        "**/.json/**"
    ],
    "todohighlight.maxFilesForSearch": 5120,
    "todohighlight.toggleURI": false,

    "Lua.diagnostics.globals": [
        "screen",
        "map",
        "input",
        "output",
        "property",
        "onDraw",
        "onTick"
    ],

    "editor.semanticHighlighting.enabled": true,
    "Lua.semantic.enable": true,
    "Lua.diagnostics.disable": [
        "lowercase-global"
    ]
}