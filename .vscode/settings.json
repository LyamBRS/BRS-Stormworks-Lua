{
    "highlight.regexes": {
        "((?<!['\"-+])\\bscreen\\b)": {
            "filterFileRegex": ".*\\.lua",
            "decorations": [
                {
                    "color": "#5050ff"
                },
            ]
        },
        "(@import)|(\"[^\"\\n]*\")": {
            "filterFileRegex": ".*\\.lua",
            "decorations": [
                {
                    "color": "#50ff50"
                },
                {
                    "color": "#D09030"
                },
            ]       
        }
    },
    "highlight.minDelay": 10,
    "highlight.decorations": {
        "rangeBehavior": 3
    },

    "Lua.diagnostics.globals": [
        "screen",
        "map",
        "input",
        "output",
        "property",
        "onDraw",
        "onTick"
    ],

    "editor.semanticHighlighting.enabled": true,
    "Lua.semantic.enable": true,
    "Lua.diagnostics.disable": [
        "lowercase-global"
    ]
}